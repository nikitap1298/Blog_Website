<%- include("partials/header") -%>

<h1>Home</h1>
<p> <%= homeStartingContent %> </p>

<%posts.forEach(function(element){%>
<h1> <%= element.composeTitle %> </h1>

<% if (element.composeTextArea.length > 100) {%>
<p> <%= element.composeTextArea.substring(0, 99) + " ..."%> <a href="/posts/<%=element.composeTitle%>>">Read More</a>
</p>

<% } else {%>
<p> <%= element.composeTextArea %> </p>
<% }%>
<%})%>

